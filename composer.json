{
	"name": "devuri/cpt-meta-box",
	"type": "library",
	"description": "Simple Implementation for custom meta boxes and fields for WordPress custom post types.",
	"keywords": [
		"wp",
		"wordpress",
		"meta",
		"meta",
		"metabox",
		"post",
		"type",
		"devuri"
	],
	"homepage": "https://github.com/devuri/cpt-meta-box",
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"authors": [
		{
			"name": "Uriel Wilson",
			"email": "support@urielwilson.com",
			"homepage": "https://urielwilson.com",
			"role": "Developer"
		}
	],
	"support": {
		"source": "https://github.com/devuri/cpt-meta-box",
		"issues": "https://github.com/devuri/cpt-meta-box/issues"
	},
	"require": {
		"php": "^7.1 || ^8.1",
		"devuri/wp-admin-page": "^3.3.2"
	},
	"require-dev": {
		"10up/phpcs-composer": "dev-master",
		"symfony/var-dumper": "^5.1.4",
		"phpunit/phpunit": "^8.0|^9.0",
		"vimeo/psalm": "^4.24",
		"phpstan/phpstan": "^1.8",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"szepeviktor/phpstan-wordpress": "^1.1",
		"friendsofphp/php-cs-fixer": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"DevUri\\Meta\\": "src"
		}
	},
	"scripts": {
		"build": [
			"composer phplint",
			"composer phpstan",
			"composer codefix",
			"composer no-dev -q",
			"composer no-dev"
		],
		"phpstan": [
			"composer install -q",
			"@php ./vendor/bin/phpstan analyse"
		],
		"phplint": [
			"composer install -q",
			"vendor/bin/parallel-lint --colors --exclude app --exclude vendor ."
		],
		"codefix": [
			"composer install -q",
			"vendor/bin/php-cs-fixer fix src"
		],
		"wpcs-fix": [
			"composer install -q",
			"phpcbf src"
		],
		"no-dev": "composer install --no-dev -q"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	}
}
